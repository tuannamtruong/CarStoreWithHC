<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>Car Store</title>
</head>
<body>
    <nav class="navbar bg-dark">
        <a class="navbar-brand text-light" href="#">CARS STORE</a>
        <div>
            @await Component.InvokeAsync("Uptime")
        </div>
        <div>
            @await Component.InvokeAsync("CartSummary")
        </div>
    </nav>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("CategoryFilterMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
